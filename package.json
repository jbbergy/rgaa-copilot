{
  "name": "rgaa-copilot",
  "version": "1.0.0",
  "description": "RGAA Copilot - Your accessibility companion for Firefox and Chrome",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:firefox && npm run build:chrome",
    "build:firefox": "vite build --mode firefox",
    "build:chrome": "vite build --mode chrome",
    "start:firefox": "npm run build:firefox && web-ext run --source-dir=dist/firefox --firefox-profile=dev-profile --keep-profile-changes --start-url=about:debugging",
    "start:chrome": "npm run build:chrome && web-ext run --source-dir=dist/chrome --target=chromium",
    "package": "npm run build && npm run package:firefox && npm run package:chrome",
    "package:firefox": "web-ext build --source-dir=dist/firefox --artifacts-dir=. --filename=rgaa-copilot-firefox.zip --overwrite-dest",
    "package:chrome": "cd dist/chrome && powershell -Command \"Compress-Archive -Path '*' -DestinationPath '../../rgaa-copilot-chrome.zip' -Force\" && cd ../..",
    "icons": "node scripts/generate-icons-svg.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:chrome": "playwright test --project=chrome",
    "test:manual:firefox": "powershell -ExecutionPolicy Bypass -File test-firefox.ps1",
    "lint": "eslint . --ext .js,.vue",
    "format": "prettier --write \"**/*.{js,vue,json,md}\""
  },
  "dependencies": {
    "vue": "^3.4.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.1.0",
    "terser": "^5.44.1",
    "vite": "^5.0.0",
    "vite-plugin-web-extension": "^4.0.0",
    "vitest": "^1.0.0",
    "web-ext": "^9.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}